= form_for(@booking) do |f|
  - if @booking.errors.any?
    #error_explanation
      %h2 = pluralize(@booking.errors.count, "error")prohibited this booking from being saved:
      %ul
      - @booking.errors.full_messages.each do |msg|
        %li
          = msg
  .field
    = f.label :course_id
    <br />
    = f.number_field :course_id
  .field
    = f.label :classroom_id
    <br />
    = f.number_field :classroom_id
  .field
    = f.label :start
    <br />
    = f.datetime_select :start
  .field
    = f.label :endtime
    <br />
    = f.datetime_select :endtime
  .actions
    %button
      = f.submit 
