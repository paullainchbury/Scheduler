<h1>Let us fill your head with stuff! </h1>

<% if @courses.blank? %>
  How embarassing! They're aren't any courses to enrol on yet. :(
<% else %>
  <%= form_tag create_enrolment_path(@user), method: :post do %>
    <% if @enrolment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@enrolment.errors.count, "error") %> prohibited this course from being saved:</h2>

        <ul>
        <% @enrolment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<div class="row">
    <div class="large-4 columns">
      Which course do you fancy?
    <%= collection_select('course', :id, @courses, :id, :name) %>

    <div class="actions">
      <button>Submit</button>
    </div>

  </div>
</div>

  <% end %>
<% end %>


